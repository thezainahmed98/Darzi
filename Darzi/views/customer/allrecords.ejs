
<h2>Our Valued Customers</h2>

<% if (allrecs.length > 0) { %>
<table border=1>
    <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Measurements</th>
        <th>Fitting Description</th>
        <th>Email</th>
        <th>Adress</th>
        <th> </th>
        <th>City</th>
        <th>State </th>
        <th>Zip</th>
        <th>username</th>
        <th>password</th>
    
    </tr>
    
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.customer_ID %></td>
        <td><%= recref.first_name %></td>
        <td><%= recref.last_name %></td>
        <td><%= recref.measurements %></td>
        <td><%= recref.fitting_desc %></td>
        <td><%= recref.email %></td>
        <td><%= recref.address_one %></td>
        <td><%= recref.address_two %></td>
        <td><%= recref.city %></td>
        <td><%= recref.state %></td>
        <td><%= recref.zipcode %></td>
        <td><%= recref.username %></td>
        <td><%= recref.password %></td>
        <td><a href='/customer/<%= recref.customer_ID %>'> Details</a></td>
        <td><a href='/customer/<%= recref.customer_ID %>/edit'>Edit</a></td>
        <td><a href='/customer/<%= recref.customer_ID %>/delete' aria-activedescendant=""onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    
    <% }); %>
</table>

<% } else { %>

    <p>Not Records Available</p>

<% } %>

<p> <a href='/customer/addrecord'>Add New</a> </p>