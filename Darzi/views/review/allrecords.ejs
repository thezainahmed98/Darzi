
<h2>Reviews from out customers</h2>

<% if (allrecs.length > 0) { %>
<table border=1>
    <tr>
        <th>Title</th>
        <th>Tailor ID</th>
        <th>Customer ID</th>
        <th>Rating</th>
        <th>Comments</th>
        <th>Date</th>
    
    </tr>
    
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.title %></td>
        <td><%= recref.tailor_ID %></td>
        <td><%= recref.customer_ID %></td>
        <td><%= recref.rate %></td>
        <td><%= recref.comments %></td>
        <td><%= recref.review_date %></td>
        <td><a href='/review/<%= recref.tailor_ID %>'> Details</a></td>
        <td><a href='/review/<%= recref.tailor_ID %>/edit'>Edit</a></td>
        <td><a href='/review/<%= recref.tailor_ID %>/delete' aria-activedescendant=""onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    
    <% }); %>
</table>

<% } else { %>

    <p>Not Records Available</p>

<% } %>

<p> <a href='/review/addrecord'>Add New</a> </p>