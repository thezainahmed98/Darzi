
<h2>Sales</h2>

<% if (allrecs.length > 0) { %>
<table border=1>
    <tr>
        <th>Sale ID</th>
        <th>Order ID</th>
        <th>Sale Date</th>
        <th>Sale Status</th>
        <th>Tailor ID</th>
        <th>Customer ID</th>
    </tr>
    
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.sale_ID %></td>
        <td><%= recref.order_ID %></td>
        <td><%= recref.sale_Date %></td>
        <td><%= recref.sale_status %></td>
        <td><%= recref.tailor_ID %></td>
        <td><%= recref.customer_ID %></td>
        <td><a href='/sale/<%= recref.sale_ID %>'> Details</a></td>
        <td><a href='/sale/<%= recref.sale_ID %>/edit'>Edit</a></td>
        <td><a href='/sale/<%= recref.sale_ID %>/delete' aria-activedescendant=""onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    
    <% }); %>
</table>

<% } else { %>

    <p>Not Records Available</p>

<% } %>

<p> <a href='/sale/addrecord'>Add New</a> </p>