
<h2>Orders</h2>

<% if (allrecs.length > 0) { %>
<table border=1>
    <tr>
        <th>Order ID</th>
        <th>Order Details</th>
        <th>Order Date</th>
        <th>Price</th>
        <th>Completion Date</th>
        <th>Tailor ID</th>
        <th>Customer ID</th>
    </tr>
    
    <% allrecs.forEach((recref, index) => { %>
    <tr>
        <td><%= recref.order_ID %></td>
        <td><%= recref.order_details %></td>
        <td><%= recref.order_date %></td>
        <td><%= recref.price %></td>
        <td><%= recref.completion_date %></td>
        <td><%= recref.email %></td>
        <td><%= recref.tailor_ID %></td>
        <td><%= recref.customer_ID %></td>
        <td><a href='/order/<%= recref.order_ID %>'> Details</a></td>
        <td><a href='/order/<%= recref.order_ID %>/edit'>Edit</a></td>
        <td><a href='/order/<%= recref.order_ID %>/delete' aria-activedescendant=""onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    
    <% }); %>
</table>

<% } else { %>

    <p>Not Records Available</p>

<% } %>

<p> <a href='/order/addrecord'>Add New</a> </p>